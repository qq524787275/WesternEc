<?xml version="1.0" encoding="utf-8"?>
<com.wethis.module_base.widget.autolayout.AutoConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5px"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/item_shop_list_image"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20px"
        android:layout_marginStart="20px"
        android:layout_marginTop="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/img_one_bi_one" />

    <TextView
        android:id="@+id/item_shop_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20px"
        android:layout_marginStart="20px"
        android:layout_marginTop="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:ellipsize="end"
        android:lines="2"
        android:text="ShopTitleShopTitleShopTitleShopTitleShopTitleShopTitle"
        android:textColor="@color/black_222"
        android:textSize="27px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_shop_list_image" />

    <TextView
        android:id="@+id/item_shop_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginStart="20px"
        android:layout_marginTop="20px"
        android:text="Â¥0.00"
        android:textColor="@color/red_ff5354"
        android:textColorHighlight="@color/red_ff5354"
        android:textSize="32px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_shop_list_title"
        app:layout_constraintVertical_bias="0.145"
        android:layout_marginLeft="20px" />

    <ImageView
        android:id="@+id/item_shop_list_shopcar"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginBottom="20px"
        android:layout_marginEnd="20px"
        android:layout_marginStart="20px"
        android:layout_marginTop="20px"
        android:src="@mipmap/shoppcat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toEndOf="@+id/item_shop_list_price"
        app:layout_constraintTop_toBottomOf="@+id/item_shop_list_title"
        app:layout_constraintVertical_bias="0.152" />
</com.wethis.module_base.widget.autolayout.AutoConstraintLayout>
